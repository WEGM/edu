body {
	font-size: 15px;
	color: #4a4a4a;
	background: #f0f0f0;
}

#page {
	position: relative;
	width: 100%;
	padding: 10% 6% 0;
	overflow: hidden;
	text-align: center;
}
.avatar-box {
	width: 100px;
	height: 100px;
	border-radius: 100%;
	overflow: hidden;
    margin: 0 auto 10px;
}
#page .header {
    position: relative;
    width: 100%;
    text-align: center;
    font-size: 0;
    margin: 0 auto 40px;
}
#page .header .avatar {
	min-height: 100px;
	overflow: hidden;
	margin: 0 auto 13px;
}
#page .header .username {
    margin: 0 auto 10px;
	font-size: 18px;
	width: 80%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

#page > p {
	width: 100%;
	text-align: center;
	margin: 0 auto 20px;
	font-size: 16px;
	color: #666;
}
#page > p:before {
	content: '';
	position: relative;
	display: inline-block;
	width: 17px;
	height: 17px;
	background: url(../../images/tip.png) no-repeat;
	background-size: 100% 100%;
	vertical-align: middle;
	top: -1px;
	margin-right: 8px;
}
