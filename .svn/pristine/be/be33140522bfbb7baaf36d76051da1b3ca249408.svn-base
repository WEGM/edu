#page .subject {
	margin: 0 auto 60px;
	width: 86%;
	text-align: center;
	font-size: 0;
}
#page .subject p {
	width: 100%;
	margin: 0 auto 15px;
}
#page .subject a {
	display: block;
	font-size: 16px;
	color: #FFF;
	height: 52px;
	line-height: 52px;
	background: #84c6e4;
	border-radius: 5px;
	box-shadow: 2px 2px 3px rgba(0,0,0,.1);
}