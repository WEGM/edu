html {
    width: 100%;
    height: 100%;
    overflow: hidden;
    overflow-y: scroll;
}
body {
    font-size: 15px;
    color: #333;
    background: #f8f8f8;
    overflow: hidden;
    min-height: 100%;
    height: initial;
}
.main
{
    font-size: 16px;
}

section:nth-child(1)
{
    position: relative;
    height:200px;
    overflow: hidden;
}
section:nth-child(2)
{
    overflow: hidden;
    width: 100%;
}
.scroll-box
{
    margin-top: 10px;
    position: relative;
    height: 100%;
    width: 100%;
}
.swiper-container
{
    height: 100%;
}
.video-box .video{
    display: block;
    width: 100%;
    height: 200px;
    overflow: hidden;
}
.video-box{
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: #000;
}
.play{
    position: absolute;
    top: 50% !important;
    left: 50% !important;
    width: 60px;
    height: 60px;
    margin-top: -30px;
    margin-left: -30px;
}
.teacher-infor
{
	-webkit-transition: -webkit-transform ease-out 400ms;
    transition: -webkit-transform ease-out 400ms;
	margin:30px 60px;
	height:90%;
	padding: 8px;
    overflow-y: auto;
    background: #fff;
    box-sizing: border-box;
}
.teacher-infor .teacher-headimg {
    height:8rem;
    width:8rem;
    border-radius: 100%;
    overflow: hidden;
    margin:0px auto 10px auto;
    border: 1px solid #F5F5F5;
}
.teacher-infor .teacher-headimg img {
    width: 100%;
    height: 100%;
    max-width: inherit;
}

.teacher-infor .teacher-name {
    position: relative;
    clear: both;
   	color:#000;
    font-size: 16px;
   	text-align: center;
}
.swiper-slide-active >.teacher-infor
{
	margin:10px 60px;
}
.course-infor
{
    padding-top: 5px;
	position: relative;
	text-align: left;
}
