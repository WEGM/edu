/*scroll*/
html,body,.main
{
    position: relative;
    height:100%;
    overflow: hidden;
}
.main
{
     font-size: 16px;
     overflow: auto;
}
h1
{
	font-size: 2.6rem;
}
.scroll-box
{
    margin-top: 15px;
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    position: relative;
    box-sizing: border-box;
    color: #000;
    overflow-y:auto; 
}
.swiper-slide section:nth-child(1)
{
    position: relative;
    height:158px;
    overflow: hidden;
}
.swiper-slide section:nth-child(2)
{
    margin-top: 10px;
    position: relative;
    padding: 10px 20px;
}

.good-edu
{
    position: relative;
    float:left;
    width: 50%;
    height:100%;
    background:#008FD0;
    color: #fff;
    font-size: 16px;
    text-align: center;
}
.good-edu p
{
    position:absolute;
    top:50%;
    width: 100%;
    left: 0;
    text-align: center;
    margin-top: -10px;
}
.logo-show
{
    position: relative;
    float:left;
    width: 50%;
    height:100%;
    padding: 8%;
    box-sizing: border-box;
    overflow: hidden;
    background:#fff;
}
.brand-infor
{
    padding: 20px;
    background: #EEEEEE;
}
.swiper-button
{
    position: absolute;
    bottom: 20px;
    width:18px;
    height: 18px;
    border-left:5px solid #008FD0;
    border-bottom:5px solid #008FD0;
    left:50%;
    margin-left: -9px;
    z-index: 10;
    transform:rotate(135deg);
    -webkit-transform:rotate(135deg);
}
.scorll-main
{
    overflow: auto;
}
.swiper-slide:last-child > .swiper-button
{
    display: none;
}